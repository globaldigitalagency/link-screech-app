{% extends 'screaming_frog/layout.html.twig' %}

{% set fields = [
  {
    name: form.groupName.vars.name,
    type: form.groupName.vars.block_prefixes[1],
    label: form_label(form.groupName),
    widget: form_widget(form.groupName, {'attr':{'class': 'form-control'}})
  },
  {
    name: form.file.vars.name,
    type: form.file.vars.block_prefixes[1],
    label: form_label(form.file),
    widget: form_widget(form.file, {'attr':{'class': 'form-control', 'id': 'csv-file'}})
  }
] %}

{% block form_errors %}
  <div class="position-absolute toasts">
    {% for field in fields %}
      {% for error in form[field.name].vars.errors %}
        <div class="toast align-items-center text-bg-danger border-0 fade" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <div class="toast-body">
              {{ error.message }}
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
{% endblock %}

{% block content %}
  <div class="new container h-100 d-flex justify-content-center align-items-center">
    <div class="form-container w-50">
      <h1 class="text-center mb-3">Nouveau groupe de crawl</h1>
      <p class="text-center mb-3">SÃ©lectionnez un fichier de crawl et donnez-lui un nom.</p>

      {{ form_start(form) }}
        {% include '_partials/form/_form.html.twig' with {
          fields: fields
        } %}
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}